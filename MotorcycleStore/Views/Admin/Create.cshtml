@model MotorcycleStore.Models.Motorcycle

<h2>Добавяне на нов мотор</h2>
<form asp-action="Create">
    <div>
        <label>Марка</label>
        <input asp-for="Brand" required />
    </div>
    <div>
        <label>Модел</label>
        <input asp-for="Model" required />
    </div>
    <div>
        <label>Описание</label>
        <textarea asp-for="Description"></textarea>
    </div>
    <div>
        <label>Цена</label>
        <input asp-for="Price" type="number" step="0.01" required />
    </div>
    <div>
        <label>Image URL</label>
        <input asp-for="ImageUrl" required />
    </div>
    <button type="submit">Запази</button>
</form>
